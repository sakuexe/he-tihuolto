---
import Layout from '../layouts/Layout.astro'
import Presentation from '../components/presentation.astro'
import Services from '../components/services.astro'
import Contacts from '../components/contacts.astro'
import ContactForm from '../components/contactform.tsx'
import Footer from '../components/footer.astro'
// check if we are in production or development
const isProd = import.meta.env.PROD
// and set the form key accordingly
const FORM_KEY = isProd ? import.meta.env.PROD_FORM_KEY : import.meta.env.DEV_FORM_KEY
---

<Layout title="He-Ti Huolto">
  <header
    class="flex items-end bg-secondary max-w-6xl mx-auto h-[28rem] rounded-b-2xl overflow-hidden relative isolate drop-shadow-md"
  >
    <div class="sectioncontainer mb-16">
      <div>
        <img src="./images/heti-teksti.svg" alt="He-Ti Huolto teksti" />
        <p class="font-bold text-4xl">
          Luotettavaa Kiinteistöhuoltoa Ammattitaidolla, Hämeenlinnassa
        </p>
        <p class="opacity-75">— Ympäri vuoden toimiva kunnossapito</p>
      </div>
      <img
        src="./images/hetitree.png"
        alt=""
        role="presentation"
        class="absolute -right-2 bottom-0 w-[26rem] opacity-25 -z-10"
      />
      <img
        src="./decor/waves.svg"
        alt=""
        role="presentation"
        class="absolute w-full scale-150 left-0 bottom-8 -z-20 opacity-10 sm:scale-100 sm:bottom-0"
      />
    </div>
  </header>
  <div class="mt-16 mb-20 space-y-20">
    <Presentation />
    <Services />
    <Contacts />
  </div>
  <ContactForm client:idle formKey={FORM_KEY} />
  <Footer />
</Layout>
