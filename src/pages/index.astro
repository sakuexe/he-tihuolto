---
import Layout from '../layouts/Layout.astro'
import HetiText from '../icons/hetitext.tsx'
import Presentation from '../components/presentation.astro'
import Services from '../components/services.astro'
import Contacts from '../components/contacts.astro'
import ContactForm from '../components/contactform.astro'
import Footer from '../components/footer.astro'
---

<Layout title="He-Ti Huolto">
  <header
    class="flex items-end bg-secondary-600 max-w-5xl mx-auto text-primary 
    h-[28rem] rounded-b-2xl overflow-hidden relative isolate drop-shadow-md"
  >
    <div class="mb-16 sectioncontainer">
      <img src="/images/heti-teksti.svg" alt="He-Ti Huolto teksti" />
      <p class="font-bold text-4xl">
        Luotettavaa Kiinteistöhuoltoa Ammattitaidolla
      </p>
      <p>— Ympäri vuoden toimiva kunnossapito</p>
    </div>
    <img
      src="/images/hetitree.png"
      alt=""
      role="presentation"
      class="absolute -right-2 bottom-0 w-[26rem] opacity-25 -z-10"
    />
  </header>
  <div class="mt-16 mb-20 space-y-20">
    <Presentation />
    <Services />
    <Contacts />
    <ContactForm />
  </div>
  <Footer />
</Layout>
